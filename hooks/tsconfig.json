{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",                /* Matches the modern Node.js 22 runtime on Render */
    "moduleResolution": "NodeNext",
    
    /* Required to resolve 'process.env' and other Node globals */
    "types": ["node"],                   
    "noImplicitAny": false,              /* Loosen type checking for faster development iteration */
    "outDir": "./dist",
    "rootDir": "./src",                  /* Ensures src/index.ts becomes dist/index.js */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "prisma"]
}